<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.android.china.view.SecondPageActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <!--toolbar-->
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_SecondPage"
            app:contentInsetLeft="0dp"
            app:contentInsetStart="0dp"
            app:contentInsetEnd="0dp"
            app:maxButtonHeight="20dp"
            app:titleMargin="0dp"
            android:background="@color/white"
            app:titleTextAppearance="@style/toolbar_testStyle"
            app:titleTextColor="@color/black"
            android:layout_margin="26dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <!--相遇天数-->
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:padding="5dp"
            android:layout_height="80dp">

            <TextView
                android:text="与瓷路相遇天数:"
                android:textSize="18sp"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:textColor="@color/black"
                android:layout_height="wrap_content"/>

            <TextView
                android:text="10 天"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="15dp"
                android:textColor="@color/black"
                android:textSize="25sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <!--创作-->
        <TextView
            android:text="diy瓷器"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/diy_porcelain_recycler_view"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="220dp"/>

        <!--ar瓷器-->
        <TextView
            android:text="Ar瓷器博物馆"
            android:textSize="18sp"
            android:layout_marginTop="15dp"
            android:textColor="@color/black"
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/ar_porcelain_recycler_view"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="150dp"/>

    </LinearLayout>

    <fragment
        android:id="@+id/navigation_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        tools:layout="@layout/bottom_navigation_bar"
        android:name="com.android.china.view.BottomNavigation"/>

</FrameLayout>