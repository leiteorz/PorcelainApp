<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.google.ar.sceneform.samples.gltf">
    <!-- Always needed for AR. -->
    <uses-permission android:name="android.permission.CAMERA" /> <!-- Needed to load gltf from network. -->
    <uses-permission android:name="android.permission.INTERNET" /> <!-- Sceneform requires OpenGLES 3.0 or later. -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <uses-feature
        android:glEsVersion="0x00030000"
        android:required="true" />
    <!--
 Indicates that this app requires Google Play Services for AR ("AR Required") and results in
         the app only being visible in the Google Play Store on devices that support ARCore.
         For an "AR Optional" app, remove this tag.
    -->
    <uses-feature
        android:name="android.hardware.camera.ar"
        android:required="true" />

    <application
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.android.china.view.ChinaGcItemActivity"
            android:exported="false" />
        <activity
            android:name="com.android.china.view.ChinaGuanCangActivity"
            android:exported="false" />

        <meta-data
            android:name="com.google.ar.core"
            android:value="required" /> <!-- diy陶瓷那个页面 -->
        <activity
            android:name="com.android.china.view.SecondPageActivity"
            android:exported="false" /> <!-- 首页 -->
        <activity
            android:name="com.android.china.view.FirstPageActivity"
            android:windowSoftInputMode="adjustPan" /> <!-- 我的 -->
        <activity android:name="com.android.china.view.MyPageActivity" /> <!-- 我的勋章 -->
        <activity android:name="com.android.china.view.MedalActivity" /> <!-- 启动页 -->
        <activity
            android:name="com.android.china.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.android.china.view.Activity" />

        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="com.example.chinaplus.cameraalbumtest.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>
    </application>

</manifest>